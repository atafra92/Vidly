@model IEnumerable<Vidly_MVCApp.Models.MovieDto>

@{
    ViewData["Title"] = "GetMovies";
}

<h1>List of Movies</h1>

<p>
    @Html.ActionLink("New Movie", "Create", "Movie", null, new { @class = "btn btn-primary" })
    @*<a asp-action="Create" class="btn btn-primary">Create New</a>*@
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (Model.Count() == 0)
            {
                <text>There are no movies to display!</text>
            }
            else
            {
                <tr>
                    <td>
                        <a asp-area="" asp-controller="Movie" asp-action="Edit" asp-route-id="@item.Id">@item.Title</a>
                    </td>
                    <td>
                        @item.Genres.Name
                    </td>
                    @*<td>
                                 @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                 @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                 @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>*@
                </tr>
            }
        }
    </tbody>
</table>
