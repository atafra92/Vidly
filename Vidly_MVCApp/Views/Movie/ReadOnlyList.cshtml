@model IEnumerable<Vidly_MVCApp.Models.MovieDto>

@{
    ViewData["Title"] = "ReadOnlyList";
}

<h1>List of Movies</h1>

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th> Title</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
 </table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "title"

                    },
                    {
                        data: "genres.name"
                    }
                ]
            });
        });
    </script>
}
