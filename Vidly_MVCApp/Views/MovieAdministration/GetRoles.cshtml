@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "GetRoles";
}

<h1>All Roles</h1>

@if(!Model.Any())
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title"> Use the button below to create a role</h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="MovieAdministration" 
               asp-action="CreateRole"> Create Role</a>
        </div>
    </div>
}
else
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="MovieAdministration">Add new role</a>

    @foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5> 
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole"
                   asp-controller="MovieAdministration" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger" asp-action="DeleteRole"
                   asp-controller="MovieAdministration" asp-route-id="@role.Id">Delete</a>
            </div>
        </div>
    }
}

